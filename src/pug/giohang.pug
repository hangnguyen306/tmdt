extends layouts/_layout_default

block setting
    - title = "CÔNG TY CỔ PHẦN DẦU KHÍ MIỀN NAM"
    - mainActive = "home"

block content
    .sMainBread
        .container
            +breadcrumb([{'title':'Giỏ hàng'}])
    .sMainContent
        .container
            .page-header-4 Giỏ hàng
            .row
                .col-sm-8
                    .sCart
                        - for (var x = 1; x < 5; x++)
                            .item
                                .row
                                    .col-3
                                        .image
                                            a(href="#"): img(src=imgPath + 'img12.png')
                                    .col-9
                                        .info
                                            a(href="#") Thiết bị cảnh báo Gas công nghiệp 
                                            span.txt-1 Mã sản phẩm: A324DDDS
                                            .row
                                                .col-6
                                                    .t-price-1 700.000đ
                                                    span.txt-1 Tiết kiệm: <b>30%</b>
                                                    span.txt-2 550.000đ
                                                    a(href="#").btn-del  Xoá
                                                .col-6
                                                    span.txt-1 Số lượng: 
                                                    .input-group
                                                        .input-group-prepend
                                                            button#minus-btn.btn-number
                                                                i.fa.fa-minus
                                                        input#qty_input.form-control.form-control-sm(type='text', value='1', min='1')
                                                        .input-group-prepend
                                                            button#plus-btn.btn-number
                                                                i.fa.fa-plus
                    .btnBack
                        a(href="#").btn-back 
                            i.ic-back
                            | Tiếp tục mua hàng
                .col-sm-4
                    .sBoxCartInner
                        table
                            tr
                                td Thành tiền:
                                td 
                                    span.sprice 2.310.000đ
                                    span.txt-note (3 sản phẩm)
                            tr
                                td Tổng tiền: 
                                td 
                                    span.sprice2 2.310.000đ
                                    span.txt-note Đã bao gồm VAT
                        .form-style
                            .row
                                .col-8
                                    +input-box("text","","","",'Mã giảm giá/ quà tặng','')
                                .col-4
                                    +a-btn-primary('Áp dụng','#','','')
                        a(href="#").v-more-2 Tiến hành đặt hàng
    .sMainContent-6
